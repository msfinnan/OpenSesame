<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="14dp">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".LocationDetailsActivity">


        <ImageView
            android:id="@+id/location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/location_details_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="No location name found"
        android:textAlignment="center"
        android:textColor="@color/softBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/mapsButton"
            android:src="@drawable/ic_location_on_black_24dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/work_sans"
            android:text="No address found"
            android:textColor="@color/softBlack"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hours_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:src="@drawable/ic_access_time_black_24dp" />


        <TextView
            android:id="@+id/opening_hours_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/work_sans"
            android:paddingLeft="4dp"
            android:text="Monday: No hours found"
            android:textColor="@color/softBlack"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/opening_hours_tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Tuesday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opening_hours_wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Wednesday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opening_hours_thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Thursday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opening_hours_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Friday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opening_hours_saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Saturday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opening_hours_sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/work_sans"
        android:text="Sunday: No hours found"
        android:textColor="@color/softBlack"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/website_button"
            android:src="@drawable/ic_open_in_browser_black_24dp"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/web_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/work_sans"
            android:text="No website found"
            android:textColor="@color/softBlack"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/call_button"
            android:src="@drawable/ic_call_black_24dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/work_sans"
            android:text="No phone number found"
            android:textColor="@color/softBlack"
            android:textSize="18sp" />

    </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>

</ScrollView>